<h1>Listing tasks</h1>

<table>
  <thead>
    <tr>
      <th>Item</th>
      <th>Details</th>
      <th>Due</th>
      <th>Done</th>
      <th>Todo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.item %></td>
        <td><%= task.details %></td>
        <td><%= task.due %></td>
        <td><%= task.done %></td>
        <td><%= task.todo_id %></td>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Task', new_task_path %>
